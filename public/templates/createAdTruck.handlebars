<!-- Dropdown-->
<div class="form-group">
    <label class="col-md-4 control-label">Type</label>
    <div class="col-md-4 inputGroupContainer">
        <select name="type" class="form-control">
            <option value="Light trucks">Light trucks</option>
            <option value="Medium trucks">Medium trucks</option>
            <option value="Heavy trucks">Heavy trucks</option>
        </select>
    </div>
</div>

<!-- Text input-->
<div class="form-group">
    <label class="col-md-4 control-label">Max load capacity</label>
    <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
            <input name="maxLoadCapacity" class="form-control" type="text">
        </div>
    </div>
</div>

<div class="form-group">
    <label class="col-md-4 control-label">Number of wheels</label>
    <div class="col-md-4 inputGroupContainer">
        <select name="numberOfWheels" class="form-control">
            <option value=""></option>
            <option value="4">4</option>
            <option value="6">6</option>
            <option value="8">8</option>
            <option value="10">10</option>
            <option value="12">12</option>
            <option value="14">14</option>
            <option value="16">16</option>
            <option value="18">18</option>
        </select>
    </div>
</div>